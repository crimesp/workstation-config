#bashrc and alias shortcuts

#edit your ~/.bash_aliases to have these lines in it, pointing to the equivalent directory for this project
#.bash_aliases is a good distro free way for user configs instead of profile

export BASH_INCLUDES=~/git/workstation-config/bash
source $BASH_INCLUDES/.profile

#for other projects, add them like this:
export ACCOM_GIT_HOME=~/git/cloudservices
export ACCOM_WORKSTATION_CONFIG=$ACCOM_GIT_HOME/workstation-config/
export ACCOM_BASH=$ACCOM_WORKSTATION_CONFIG/bash
source $ACCOM_BASH/.aliases_and_functions.sh
